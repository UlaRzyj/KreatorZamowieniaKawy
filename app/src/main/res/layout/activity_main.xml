<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#c5ab9f"
    android:layout_gravity="center">

    <TextView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zamów swoją kawę!"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#40FFFFFF"
        android:layout_gravity="center">

            <RadioGroup
                android:id="@+id/coffee_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <RadioButton
                    android:id="@+id/black_coffe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Czarna kawa"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"/>

                <RadioButton
                    android:id="@+id/coffee_with_milk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kawa z mlekiem"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"/>

                <RadioButton
                    android:id="@+id/season_coffee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kawa sezonowa"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"/>
            </RadioGroup>

    </androidx.cardview.widget.CardView>

    <CheckBox
        android:id="@+id/sugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Czy chcesz dodatkowy cukier?"
        android:textColor="@color/black"
        android:layout_margin="5dp"/>

    <CheckBox
        android:id="@+id/milk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Czy chcesz dodatkowe mleko?"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_margin="5dp"/>


    <SeekBar
        android:id="@+id/number"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="50"
        android:progressTint="#95FFFFFF"
        android:progressBackgroundTint="#40FFFFFF"
        android:thumbTint="#EFE4E4"
        android:layout_margin="10dp"/>


</LinearLayout>